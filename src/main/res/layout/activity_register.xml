<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RegisterActivity" android:background="@android:color/holo_blue_dark">
    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/email_edittext_register"
            android:background="@drawable/rounded_edittext_register_login" android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
            android:hint="Email"
            android:paddingLeft="16dp" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/username_edittext_register"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/password_edittext_login"
            android:background="@drawable/rounded_edittext_register_login" android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
            android:hint="Password"
            android:paddingLeft="16dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/email_edittext_register"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/username_edittext_register"
            android:background="@drawable/rounded_edittext_register_login"
            android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="420dp"
            app:layout_constraintTop_toTopOf="parent" android:hint="Username"
            android:paddingLeft="16dp" app:layout_constraintHorizontal_bias="1.0"/>
    <Button
            android:text="Register"
            android:layout_width="0dp"
            android:background="@drawable/rounded_button"
            android:layout_height="wrap_content"
            android:id="@+id/register_button_register" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/password_edittext_login"
            app:layout_constraintEnd_toEndOf="@+id/password_edittext_login"
            app:layout_constraintStart_toStartOf="@+id/password_edittext_login"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" android:fontFamily="sans-serif-black"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Already have an account?"
            android:ems="10"
            android:id="@+id/back_to_register_text_view"
            android:textColor="#ffffff" android:textStyle="bold" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/register_button_register"
            app:layout_constraintEnd_toEndOf="@+id/register_button_register"
            app:layout_constraintStart_toStartOf="@+id/register_button_register" android:textAlignment="center"
            style="@android:style/Widget.Holo.Light.AutoCompleteTextView"/>
    <Button
            android:text="Select Photo"
            android:layout_width="197dp"
            android:layout_height="200dp"
            android:id="@+id/upload_pic_button"
            android:background="@drawable/circle_uploadimage_button"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:layout_marginBottom="32dp" app:layout_constraintBottom_toTopOf="@+id/username_edittext_register"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:fontFamily="sans-serif-black"/>
</androidx.constraintlayout.widget.ConstraintLayout>